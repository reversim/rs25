---
import Header from "../components/header.astro";
import STDImage from "../assets/std.png";
import { Font } from "astro:assets";

interface Props {
  havePadding?: boolean;
}

const { havePadding = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon-dark-mode.svg" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon-light-mode.svg"
      media="(prefers-color-scheme: light)"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <Font cssVariable="--font-montserrat" preload />
    <meta name="generator" content={Astro.generator} />
    <title>Reversim 2025</title>

    <meta property="og:title" content="Reversim 2025" />
    <meta
      property="og:description"
      content="Reversim Summit 2025 is Israelâ€™s leading community-driven tech conference, bringing together developers, product managers, and data scientists for top-tier content and networking."
    />
    <meta
      property="og:image"
      content={`https://summit2025.reversim.com${STDImage.src}`}
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://summit2025.reversim.com/" />

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-PSS53H641T"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-PSS53H641T");
    </script>
  </head>
  <body>
    <Header />
    <div class={`body-container ${havePadding ? "have-padding" : ""}`}>
      <slot class="layout-container" />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --breakpoint-small: 576px;
    --breakpoint-medium: 768px;
    --breakpoint-large: 992px;
    --breakpoint-x-large: 1200px;

    --max-container-width: 1000px;

    --pink: #fd6a82;
    --orange: #f78750;
    --green: #81c47a;
    --blue: #506592;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-montserrat), sans-serif;
    font-weight: 400;
  }

  body {
    background-image: radial-gradient(#d1cdcd 1px, transparent 1px);
    background-size: 23px 23px;

    position: relative;
  }

  .body-container {
    /* position: relative; */
    margin: auto;
    box-sizing: unset;
    overflow: hidden;
  }

  .have-padding {
    max-width: var(--max-container-width);
    padding: 20px 10% 0;
  }

  * {
    box-sizing: border-box;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
  }

  h2 {
    font-size: 36px;
    margin-bottom: 16px;
    font-weight: 100;
    text-align: center;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    height: auto;
  }

  * {
    scroll-margin-top: 100px;
  }

  .splide__pagination {
    bottom: -3em;
    width: max-content;
    margin: auto;
  }
  .splide__pagination li {
    display: flex;
  }
  .splide__pagination__page {
    height: 10px;
    width: 10px;
    background: #1d2244; /* Custom color */
    border-radius: 50%;
    opacity: 0.5;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  .splide__pagination__page:not(.is-active) {
    border: 1px dashed white;
  }

  .splide__pagination__page.is-active {
    background: #7eb9bf; /* Change color for active */
    opacity: 1;
    transform: scale(1);
  }

  .splide__arrows {
    position: absolute;
    width: 100%;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    pointer-events: none; /* Ensures they don't interfere with image clicks */
  }
  .splide__arrow {
    background: none;
    pointer-events: auto; /* Allows clicking */
  }
  .splide__arrow svg {
    fill: var(--pink); /* Arrow color */
    font-size: 26px;
  }
  .splide__arrow--prev {
    left: -50px; /* Moves previous arrow outside */
  }
  .splide__arrow--next {
    right: -50px; /* Moves next arrow outside */
  }

  body {
    font-family: var(--font-montserrat), sans-serif;
  }
</style>
