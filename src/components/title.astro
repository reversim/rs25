---
import type { CSSProperty } from "astro/types";

interface Props {
  title: string;
  titleColor?: string;
  style?: string;
  id?: string;
}

const { title, titleColor, style, id } = Astro.props;
---

<h3
  style=`color:${titleColor || "white"}; ${style}`
  class="title-container"
  id={id}
>
  {title}
</h3>

<style lang="scss">
  .title-container {
    position: relative;
    width: 46%;
    margin: 100px 0 60px;
    font-size: 32px;

    background-image: linear-gradient(
      to right,
      #8faad6 60%,
      rgba(255, 255, 255, 0) 0%
    );
    background-position: 5% bottom;
    background-size: 20px 3px;
    background-repeat: repeat-x;

    &::before {
      content: "";
      position: absolute;
      width: 0.7em;
      aspect-ratio: 1;
      border-radius: 50%;
      background-color: #8faad6;
      top: 100%;
      right: 0;

      transform: translate(50%, calc(-50% - 1.5px));
    }

    @media screen and (max-width: 768px) {
      width: 100%;
    }
  }
</style>
