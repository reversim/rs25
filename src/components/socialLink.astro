---
import Twitter from "../assets/socials/x-twitter.svg";
import Linkedin from "../assets/socials/linkedin.svg";
import Bluesky from "../assets/socials/bluesky.svg";
import Facebook from "../assets/socials/facebook.svg";
import Github from "../assets/socials/github.svg";
import Instagram from "../assets/socials/instagram.svg";
import Link from "../assets/socials/link.svg";
import Medium from "../assets/socials/medium.svg";
import Youtube from "../assets/socials/youtube.svg";

interface Props {
  link?: string;
  type: string;
}

const { link, type } = Astro.props;
const iconsSize = 16
---
{
  link && (
    <a target="_blank" href={link}>
      {() => {
        switch (type) {
          case "linkedin":
            return <Linkedin width={iconsSize} />;

          case "twitter":
            return <Twitter width={iconsSize} />;

          case "bluesky":
            return <Bluesky width={iconsSize} />;

          case "facebook":
            return <Facebook width={iconsSize} />;

          case "github":
            return <Github width={iconsSize} />;

          case "instagram":
            return <Instagram width={iconsSize} />;

          case "website":
            return <Link width={iconsSize + 4} />;

          case "medium":
            return <Medium width={iconsSize} />;

          case "youtube":
            return <Youtube width={iconsSize} />;

          default:
            return <>{type}</>;
        }
      }}
    </a>
  )
}

<style lang="scss">
  a {
    background-color: #000000;
    border-radius: 50%;
    aspect-ratio: 1;
    width: 28px;

    display: flex;
    justify-content: center;
    align-items: center;

    svg {
      // scale: 0.7;
      fill: #cddcf0;
    }
  }
</style>
