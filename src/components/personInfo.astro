---
import { Image } from "astro:assets";
import SocialLink from "./socialLink.astro";
import type { teamMember } from "../helpers/getTeam";

interface Props extends Partial<teamMember> {
  socialList: Record<string, string | undefined>;
}

const { socialList, name, image, title, company, bio } = Astro.props;
---

<div class="main-container">
  <div class="media-socials-container">
    <button id="back-button" class="back-button">Back</button>
    <Image src={image} alt={name || ""} width="500" height={"500"} />
    <div class="links">
      {
        Object.entries(socialList).map(([social, link]) => {
          return <SocialLink type={social} link={link || ""} />;
        })
      }
    </div>
  </div>
  <div class="info-container">
    <h3 class="name">{name}</h3>
    <p class="title">{title}</p>
    {company && <p class="company">{company}</p>}
    <p class="bio">{bio}</p>
  </div>
</div>

<script>
  const button = document.querySelector("#back-button");
  button?.addEventListener("click", () => {
    console.log("back");

    history.back();
  });
</script>

<style lang="scss">
  .main-container {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;

    @media screen and (max-width: 576px) {
      justify-content: center;
      text-align: center;
    }

    .media-socials-container {
      display: flex;
      flex-direction: column;

      img {
        border-radius: 50%;
        width: 250px;
        height: 250px;
        object-fit: cover;
      }

      .links {
        margin-top: 6px;
        display: flex;
        justify-content: center;
        gap: 8px;
      }

      .back-button {
        border: none;
        border-radius: 4px;
        width: max-content;
        background-color: #7ca4d6;
        padding: 4px 8px;
        color: white;
      }
    }

    .info-container {
      font-size: 16px;
      flex: 1;
      min-width: 300px;

      .name {
        font-size: 28px;
        font-weight: 100;
      }

      .title {
        margin: 2px 0 8px;
      }
      .company {
        margin-bottom: 12px;
      }
      .bio {
        font-size: 14px;
      }
    }
  }
</style>