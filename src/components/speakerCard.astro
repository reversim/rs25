---
import { Image } from "astro:assets";
import type { speaker } from "../helpers/getSpeakers";

interface Props extends speaker {}

const {
  fullName,
  profilePicture,
  tagLine,
  slug
} = Astro.props;

---

<a data-astro-prefetch href={`/speakers/${slug}`} class="card">
  <Image class="image" alt={fullName} src={profilePicture} width="240" height="240" />
  <h3 class="name">{fullName}</h3>
  <p class="title">{tagLine}</p>
</a>

<style lang="scss">
  h3,
  p {
    margin: 0;
    text-align: center;
  }

  .card {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    flex: 1;

    min-height: 250px;

    color: black;

    &:hover {
      .image {
        border-color: #1f1747ca;
      }
    }
    .image {
      width: 120px;
      height: 120px;
      transition: 0.3s;
      border-radius: 50%;
      margin-bottom: 5px;
      border: 4px solid #bccadd;
      object-fit: cover;
    }
  }
</style>
