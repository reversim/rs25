---
import { Image } from "astro:assets";

import reversim24Icon from "../assets/reversim-25-icon.png";
---

<div class="main-banner">
  <div class="overlay"></div>
  <div id="container">
    <Image class="rv-icon" alt="" src={reversim24Icon} />

    <div class="event-details">
      <p class="date">Coming Soon</p>
      <p class="location">Tel Aviv</p>
    </div>
    <button>See you next year </button>
  </div>
</div>

<style lang="scss">
  .main-banner {
    position: relative;
    padding: 20px 10%;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 0;
    background-image: url("../assets/background-overlay.png");
    background-size: cover;
    background-repeat: no-repeat;
  }

  #container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px 0;
    max-width: var(--max-container-width);
    margin: auto;
    position: relative;
    z-index: 1;
  }

  .rv-icon {
    width: 100%;
    height: 230px;
    object-fit: contain;
    grid-column: 1/4;
  }

  .date,
  .location {
    color: #ffffff;
    font-size: 20px;
  }

  .event-details {
    grid-column: 1/3;
    display: flex;
    height: 100px;

    align-self: center;

    background-color: rgba(232, 234, 237, 0.16);
    border: 1px solid #74a6de;

    p {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      flex: 1;
      border: 1px solid rgba(0, 128, 0, 0.287);
      height: 90%;
    }

    p + p {
      position: relative;
      &::before {
        content: "";
        height: 100%;
        width: 3px;
        background-color: #74a6de;
        position: absolute;
        top: 0;
        left: 0;
      }
    }
  }
  button {
    border: none;
    width: max-content;
    align-self: center;
    justify-self: center;
    padding: 20px 30px;
    border-radius: 30px;

    background-color: #cccccc;
    color: white;
  }
</style>
